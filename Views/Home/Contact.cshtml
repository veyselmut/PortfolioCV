@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<PortfolioCV.SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Contact"];
}

<div class="container-fluid p-30">
    
    <div style="height: 30px;"></div>

    <!-- Contact Header -->
    <div class="row mb-30">
        <div class="col-md-12 text-center">
            <h2 class="contact-main-title">@SharedLocalizer["GetInTouch"]</h2>
            <p class="contact-subtitle">@SharedLocalizer["ContactSubtitle"]</p>
        </div>
    </div>

    <div class="row">
        <!-- Contact Form (Full Width) -->
        <div class="col-md-12 mb-30">
            <div class="contact-form-wrapper" style="max-width: 900px; margin: 0 auto;">
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success" style="background: rgba(25, 135, 84, 0.2); border: 1px solid #198754; color: #75b798; padding: 15px; margin-bottom: 20px; border-radius: 5px;">
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                    </div>
                }

                <form asp-action="Contact" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-30">
                            <div class="form-group-modern">
                                <input type="text" name="Name" placeholder="@SharedLocalizer["FullName"]" required>
                            </div>
                        </div>
                        <div class="col-md-6 mb-30">
                            <div class="form-group-modern">
                                <input type="email" name="Email" placeholder="@SharedLocalizer["Email"]" required>
                            </div>
                        </div>
                        <div class="col-md-12 mb-30">
                            <div class="form-group-modern">
                                <input type="text" name="Subject" placeholder="@SharedLocalizer["Subject"]" required>
                            </div>
                        </div>
                        <div class="col-md-12 mb-30">
                            <div class="form-group-modern">
                                <textarea name="Message" rows="6" placeholder="@SharedLocalizer["Message"]" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn-art btn-art-large">
                                <span>@SharedLocalizer["SendMessage"]</span>
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
