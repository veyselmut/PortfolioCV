@model Certificate

@{
    ViewData["Title"] = "Sertifika Düzenle";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Sertifika & Kurs Bilgisi Düzenle</h3>
            </div>
            <form method="post" action="/Admin/EditCertificate">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="card-body">
                    <div class="form-group">
                        <label>Sertifika/Kurs Adı</label>
                        <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Veren Kurum</label>
                        <input type="text" name="Issuer" value="@Model.Issuer" class="form-control" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Alınan Tarih</label>
                            <input type="date" name="Date" value="@(Model.Date.ToString("yyyy-MM-dd"))" class="form-control" required />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Sıra</label>
                            <input type="number" name="Order" value="@Model.Order" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Açıklama (Opsiyonel)</label>
                        <textarea name="Description" class="form-control" rows="2">@Model.Description</textarea>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-success">Güncelle</button>
                    <a href="/Admin/Certificates" class="btn btn-default">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
