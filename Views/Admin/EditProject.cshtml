@model Project

@{
    ViewData["Title"] = "Proje Düzenle";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Proje Bilgisi Düzenle</h3>
            </div>
            <form method="post" action="/Admin/EditProject">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="card-body">
                    <div class="form-group">
                        <label>Proje Adı</label>
                        <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                    </div>
                    
                    <div class="form-group">
                        <label>Proje Açıklaması</label>
                        <textarea name="Description" class="form-control" rows="3" placeholder="Proje hakkında kısa açıklama...">@Model.Description</textarea>
                    </div>
                    
                    <div class="form-group">
                        <label>Görevler</label>
                        <textarea name="Tasks" class="form-control" rows="4" placeholder="Her satıra bir görev yazın...">@Model.Tasks</textarea>
                        <small class="form-text text-muted">Her satıra bir görev yazın</small>
                    </div>
                    
                    <div class="row">
                         <div class="col-md-6 form-group">
                            <label>Tarih</label>
                            <input type="date" name="Date" value="@(Model.Date.ToString("yyyy-MM-dd"))" class="form-control" required />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Sıra</label>
                            <input type="number" name="Order" value="@Model.Order" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Proje Linki (URL)</label>
                        <input type="url" name="Url" value="@Model.Url" class="form-control" placeholder="https://..." />
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a href="/Admin/Projects" class="btn btn-default">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
