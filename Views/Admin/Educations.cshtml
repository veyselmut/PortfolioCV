@model List<Education>

@{
    ViewData["Title"] = "Eğitim Bilgilerim";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Eğitim Listesi</h3>
        <div class="card-tools">
            <a href="/Admin/CreateEducation" class="btn btn-sm btn-primary">Yeni Ekle</a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Eğitim Seviyesi</th>
                    <th>Okul</th>
                    <th>Başlangıç/Bitiş</th>
                    <th>Durum</th>
                    <th style="width: 150px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EducationType</td>
                        <td>@item.School</td>
                        <td>@item.StartDate.ToShortDateString() / @(item.IsContinuing ? "Halen" : item.EndDate?.ToShortDateString())</td>
                        <td>@(item.IsContinuing ? "Devam Ediyor" : "Mezun")</td>
                        <td>
                            <a href="/Admin/EditEducation/@item.Id" class="btn btn-xs btn-info">Düzenle</a>
                            <a href="/Admin/DeleteEducation/@item.Id" class="btn btn-xs btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
