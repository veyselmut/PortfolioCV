@model List<Contact>

@{
    ViewData["Title"] = "Mesajlar";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Gelen Mesajlar</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Durum</th>
                            <th>Ad</th>
                            <th>E-posta</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var contact in Model)
                            {
                                <tr class="@(contact.IsRead ? "" : "table-warning")">
                                    <td>
                                        @if (contact.IsRead)
                                        {
                                            <span class="badge badge-secondary">Okundu</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Yeni</span>
                                        }
                                    </td>
                                    <td>@contact.Name</td>
                                    <td>@contact.Email</td>
                                    <td>@contact.Subject</td>
                                    <td>@contact.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <a href="/Admin/ViewContact/@contact.Id" class="btn btn-sm btn-success">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/Admin/DeleteContact/@contact.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Henüz mesaj yok.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
