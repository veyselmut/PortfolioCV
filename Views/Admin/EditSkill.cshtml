@model Skill

@{
    ViewData["Title"] = "Yetenek Düzenle";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Yetenek Düzenle</h3>
            </div>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    
                    <div class="form-group">
                        <label for="Name">Yetenek Adı</label>
                        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="Level">Seviye: <span id="levelValue" class="badge badge-danger">@Model.Level</span>%</label>
                        <input type="range" id="Level" name="Level" class="custom-range" min="1" max="100" value="@Model.Level" />
                    </div>

                    <div class="form-group">
                        <label for="Order">Sıra</label>
                        <input type="number" id="Order" name="Order" value="@Model.Order" class="form-control" />
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                    <a href="/Admin/Skills" class="btn btn-default">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var levelSlider = document.getElementById('Level');
        
        function updateSlider() {
            var value = levelSlider.value;
            document.getElementById('levelValue').textContent = value;
            
            // Update slider background gradient
            var percentage = value;
            levelSlider.style.background = `linear-gradient(to right, #dc3545 0%, #dc3545 ${percentage}%, #e9ecef ${percentage}%, #e9ecef 100%)`;
        }
        
        levelSlider.addEventListener('input', updateSlider);
        updateSlider(); // Initialize on page load
    </script>
}
