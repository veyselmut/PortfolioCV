@model PortfolioCV.Models.Admin

@{
    ViewData["Title"] = "Admin Profili";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-cog mr-2"></i>Admin Profil Ayarları</h3>
            </div>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <i class="icon fas fa-ban"></i> @ViewBag.Error
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.Success))
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <i class="icon fas fa-check"></i> @ViewBag.Success
                        </div>
                    }

                    <div class="form-group">
                        <label for="username"><i class="fas fa-user mr-1"></i>Kullanıcı Adı</label>
                        <input type="text" name="username" value="@Model?.Username" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="email"><i class="fas fa-envelope mr-1"></i>Email</label>
                        <input type="email" name="email" value="@Model?.Email" class="form-control" required />
                    </div>

                    <hr class="my-4">
                    <h5 class="mb-3"><i class="fas fa-key mr-2"></i>Şifre Değiştir</h5>

                    <div class="form-group">
                        <label for="currentPassword"><i class="fas fa-lock mr-1"></i>Mevcut Şifre <span class="text-danger">*</span></label>
                        <input type="password" name="currentPassword" class="form-control" required placeholder="Değişiklik yapmak için gerekli" />
                        <small class="form-text text-muted">Güvenlik için mevcut şifrenizi girmeniz gerekiyor.</small>
                    </div>

                    <div class="form-group">
                        <label for="newPassword"><i class="fas fa-key mr-1"></i>Yeni Şifre</label>
                        <input type="password" name="newPassword" class="form-control" minlength="6" placeholder="Boş bırakırsanız şifre değişmez" />
                        <small class="form-text text-muted">En az 6 karakter olmalıdır.</small>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword"><i class="fas fa-key mr-1"></i>Yeni Şifre (Tekrar)</label>
                        <input type="password" name="confirmPassword" class="form-control" minlength="6" placeholder="Yeni şifreyi tekrar girin" />
                    </div>

                    <div class="alert alert-info">
                        <i class="icon fas fa-info-circle"></i>
                        <strong>Not:</strong> Kullanıcı adını değiştirirseniz, otomatik olarak çıkış yapılıp yeni kullanıcı adıyla tekrar giriş yapacaksınız.
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save mr-1"></i>Değişiklikleri Kaydet
                    </button>
                    <a href="/Admin/Dashboard" class="btn btn-default">
                        <i class="fas fa-times mr-1"></i>İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Password confirmation validation
        $('form').on('submit', function(e) {
            var newPass = $('input[name="newPassword"]').val();
            var confirmPass = $('input[name="confirmPassword"]').val();
            
            if (newPass && newPass !== confirmPass) {
                e.preventDefault();
                alert('Yeni şifreler eşleşmiyor!');
                return false;
            }
        });
    </script>
}
