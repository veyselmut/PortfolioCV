@model PersonalInfo

@{
    ViewData["Title"] = "Kişisel Bilgiler";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Kişisel Bilgiler</h3>
            </div>
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Ad Soyad</label>
                            <input type="text" name="FullName" value="@Model?.FullName" class="form-control" required />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ünvan</label>
                            <input type="text" name="Title" value="@Model?.Title" class="form-control" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>E-posta</label>
                            <input type="email" name="Email" value="@Model?.Email" class="form-control" required />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon</label>
                            <input type="text" name="Phone" value="@Model?.Phone" class="form-control" placeholder="+90 XXX XXX XX XX" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Adres</label>
                        <textarea name="Address" class="form-control" rows="2">@Model?.Address</textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label>Cinsiyet</label>
                            <select name="Gender" class="form-control">
                                <option value="Kadın" selected="@(Model?.Gender == "Kadın")">Kadın</option>
                                <option value="Erkek" selected="@(Model?.Gender == "Erkek")">Erkek</option>
                            </select>
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Sürücü Belgesi</label>
                            <select name="HasDrivingLicense" class="form-control" id="drivingLicenseSwitch">
                                <option value="false" selected="@(Model?.HasDrivingLicense == false)">Yok</option>
                                <option value="true" selected="@(Model?.HasDrivingLicense == true)">Var</option>
                            </select>
                        </div>
                        <div class="col-md-4 form-group" id="licenseClassGroup" style="display: @(Model?.HasDrivingLicense == true ? "block" : "none")">
                            <label>Sürücü Belge Sınıfı</label>
                            <input type="text" name="DrivingLicenseClass" value="@Model?.DrivingLicenseClass" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Askerlik Durumu</label>
                            <select name="MilitaryStatus" class="form-control">
                                <option value="Muaf" selected="@(Model?.MilitaryStatus == "Muaf")">Muaf</option>
                                <option value="Tecilli" selected="@(Model?.MilitaryStatus == "Tecilli")">Tecilli</option>
                                <option value="Yapıldı" selected="@(Model?.MilitaryStatus == "Yapıldı")">Yapıldı</option>
                                <option value="Yapılmadı" selected="@(Model?.MilitaryStatus == "Yapılmadı")">Yapılmadı</option>
                            </select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Profil Fotoğrafı</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" name="avatar" class="custom-file-input" id="avatarInput">
                                    <label class="custom-file-label">Cihazdan Seç</label>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model?.AvatarPath))
                            {
                                <img src="@Model.AvatarPath" style="height: 50px; margin-top: 10px;" />
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Hakkımda</label>
                        <textarea name="About" class="form-control" rows="4">@Model?.About</textarea>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#drivingLicenseSwitch').change(function() {
            if ($(this).val() === 'true') {
                $('#licenseClassGroup').show();
            } else {
                $('#licenseClassGroup').hide();
            }
        });
        $('.custom-file-input').on('change', function() {
            let fileName = $(this).val().split('\\').pop();
            $(this).next('.custom-file-label').addClass("selected").html(fileName);
        });
    </script>
}
