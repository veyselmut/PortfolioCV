@model WelcomeMessage

@{
    ViewData["Title"] = "Karşılama Mesajı";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Karşılama Mesajı Düzenle</h3>
            </div>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <input type="hidden" name="Id" value="@(Model?.Id ?? 0)" />
                    
                    <div class="form-group">
                        <label for="Title">Başlık</label>
                        <input type="text" id="Title" name="Title" value="@Model?.Title" class="form-control" placeholder="Hoş Geldiniz" required />
                    </div>

                    <div class="form-group">
                        <label for="Subtitle">Alt Başlık</label>
                        <input type="text" id="Subtitle" name="Subtitle" value="@Model?.Subtitle" class="form-control" placeholder="Kişisel Portföy & Özgeçmiş" required />
                    </div>

                    <div class="form-group">
                        <label for="Description">Açıklama</label>
                        <textarea id="Description" name="Description" class="form-control" rows="4" placeholder="Kendinizi tanıtın..." required>@Model?.Description</textarea>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a href="/Admin/Dashboard" class="btn btn-default">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
