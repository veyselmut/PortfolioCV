@model List<Skill>

@{
    ViewData["Title"] = "Yetenek Yönetimi";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yetenekler</h3>
                <div class="card-tools">
                    <a href="/Admin/CreateSkill" class="btn btn-danger btn-sm">
                        <i class="fas fa-plus"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Yetenek</th>
                            <th style="width: 200px;">Seviye</th>
                            <th>Sıra</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var skill in Model)
                            {
                                <tr>
                                    <td>@skill.Name</td>
                                    <td>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-danger" style="width: @skill.Level%"></div>
                                        </div>
                                        <small>@skill.Level%</small>
                                    </td>
                                    <td><span class="badge badge-danger">@skill.Order</span></td>
                                    <td>
                                        <a href="/Admin/EditSkill/@skill.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Admin/DeleteSkill/@skill.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Henüz yetenek eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
