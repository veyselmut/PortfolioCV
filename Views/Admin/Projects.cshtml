@model List<Project>

@{
    ViewData["Title"] = "Projeler";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Proje Listesi</h3>
        <div class="card-tools">
            <a href="/Admin/CreateProject" class="btn btn-sm btn-primary">Yeni Ekle</a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Proje Adı</th>
                    <th>Tarih</th>
                    <th style="width: 150px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>
                            <a href="/Admin/EditProject/@item.Id" class="btn btn-xs btn-info">Düzenle</a>
                            <a href="/Admin/DeleteProject/@item.Id" class="btn btn-xs btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
