@model List<Certificate>

@{
    ViewData["Title"] = "Sertifikalar";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sertifika & Kurst Listesi</h3>
        <div class="card-tools">
            <a href="/Admin/CreateCertificate" class="btn btn-sm btn-primary">Yeni Ekle</a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sertifika Adı</th>
                    <th>Kurum</th>
                    <th>Tarih</th>
                    <th style="width: 150px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Issuer</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>
                            <a href="/Admin/EditCertificate/@item.Id" class="btn btn-xs btn-info">Düzenle</a>
                            <a href="/Admin/DeleteCertificate/@item.Id" class="btn btn-xs btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
