@model Certificate

@{
    ViewData["Title"] = "Sertifika Ekle";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Sertifika / Seminer / Kurs</h3>
            </div>
            <form method="post" action="/Admin/CreateCertificate">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="form-group">
                        <label>Sertifika Adı</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Düzenleyen Kurum</label>
                        <input type="text" name="Issuer" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="date" name="Date" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Açıklama (İsteğe Bağlı)</label>
                        <textarea name="Description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a href="/Admin/Certificates" class="btn btn-default">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
