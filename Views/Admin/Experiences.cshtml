@model List<Experience>

@{
    ViewData["Title"] = "İş Deneyimi Yönetimi";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">İş Deneyimleri</h3>
                <div class="card-tools">
                    <a href="/Admin/CreateExperience" class="btn btn-warning btn-sm">
                        <i class="fas fa-plus"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Pozisyon</th>
                            <th>Şirket</th>
                            <th>Tarih</th>
                            <th>Sıra</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var exp in Model)
                            {
                                <tr>
                                    <td>@exp.Position</td>
                                    <td>@exp.CompanyName</td>
                                    <td>@exp.StartDate.ToShortDateString() - @(exp.IsCurrentlyWorking ? "Halen" : exp.EndDate?.ToShortDateString())</td>
                                    <td><span class="badge badge-warning">@exp.Order</span></td>
                                    <td>
                                        <a href="/Admin/EditExperience/@exp.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Admin/DeleteExperience/@exp.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Henüz iş deneyimi eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
