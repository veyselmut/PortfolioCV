@model Contact

@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Mesaj Detayı</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="fas fa-user mr-1"></i> Gönderen</strong>
                        <p class="text-muted">@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="fas fa-envelope mr-1"></i> E-posta</strong>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="fas fa-tag mr-1"></i> Konu</strong>
                        <p class="text-muted">@Model.Subject</p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="fas fa-calendar mr-1"></i> Tarih</strong>
                        <p class="text-muted">@Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm")</p>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-12">
                        <strong><i class="fas fa-comment mr-1"></i> Mesaj</strong>
                        <div class="p-3 bg-light rounded mt-2">
                            <p class="mb-0">@Model.Message</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Admin/Contacts" class="btn btn-default">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <a href="/Admin/DeleteContact/@Model.Id" class="btn btn-danger float-right" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                    <i class="fas fa-trash"></i> Sil
                </a>
            </div>
        </div>
    </div>
</div>
