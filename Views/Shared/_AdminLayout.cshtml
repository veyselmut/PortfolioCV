        .custom-range {
            -webkit-appearance: none;
            width: 100%;
            height: 8px;
            border-radius: 5px;
            background: linear-gradient(to right, #dc3545 0%, #dc3545 50%, #e9ecef 50%, #e9ecef 100%);
            outline: none;
            transition: background 0.3s ease;
        }
        
        .custom-range::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 20px;
            height: 20px;
