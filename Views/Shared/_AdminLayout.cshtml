                                        .small-box { color: #fff !important; }
                                        .small-box-footer { background-color: rgba(0,0,0,0.2) !important; color: #fff !important; }
                                        .btn-app { background-color: #3f474e !important; color: #fff !important; border: 1px solid #6c757d !important; }
                                    `;
                                }
                            }
                            function updateThemeUI() {
                                const storedTheme = localStorage.getItem('appTheme') || 'system';
                                const effective = getEffectiveTheme(storedTheme);
                                
                                // Update Icon
                                if(themeIcon) {
                                    if(storedTheme === 'light') { themeIcon.className = 'fas fa-sun'; themeIcon.style.color = '#ffc107'; }
                                    else if(storedTheme === 'dark') { themeIcon.className = 'fas fa-moon'; themeIcon.style.color = '#9090aa'; }
                                    else { themeIcon.className = 'fas fa-desktop'; themeIcon.style.color = 'var(--text-muted)'; }
                                }

                                document.documentElement.setAttribute('data-theme', effective);
                                
                                // Dynamic CSS Update
                                const styleTag = document.getElementById('theme-css');
                                if(styleTag) {
                                    styleTag.innerHTML = getThemeCss(effective);
                                }
                                
                                const sidebar = document.querySelector('.main-sidebar');
                                const navbar = document.querySelector('.main-header');

                                if (effective === 'light') {
                                    document.body.classList.remove('dark-mode');
                                    if(sidebar) { sidebar.classList.remove('sidebar-dark-primary'); sidebar.classList.add('sidebar-light-primary'); }
                                    if(navbar) { navbar.classList.remove('navbar-dark'); navbar.classList.add('navbar-light', 'navbar-white'); }
                                } else {
                                    document.body.classList.add('dark-mode');
                                    if(sidebar) { sidebar.classList.remove('sidebar-light-primary'); sidebar.classList.add('sidebar-dark-primary'); }
                                    if(navbar) { navbar.classList.remove('navbar-light', 'navbar-white'); navbar.classList.add('navbar-dark'); }
                                }
                            }

                            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', updateThemeUI);
                            
                            // Initial call
                            updateThemeUI();

                            window.setAppTheme = function(theme) {
                                localStorage.setItem('appTheme', theme);
                                document.cookie = "appTheme=" + theme + "; path=/; max-age=31536000"; // 1 year expiry
                                updateThemeUI();
                            };

                            if(themeToggle && themeMenu) {
                                themeToggle.addEventListener('click', function(e) {
                                    e.stopPropagation();
                                    const isVisible = themeMenu.style.display === 'block';
                                    closeAllMenus();
                                    if(!isVisible) themeMenu.style.display = 'block';
                                });
                            }
                        });
                    </script>
